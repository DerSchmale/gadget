{
    "compilerOptions": {
        "sourceMap": false,
        "declaration": true,
        "declarationMap": true,
        "noImplicitAny": true,
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "lib": [
            "ES2017",
            "dom",
        ],
        "plugins": [],
        "rootDir": ".",
    },
    "include": [
        "./packages/*/src/**/*",
        "./packages/*/rollup.config.ts",
        "./build/**/*.ts",
        "./common/**/*.ts"
    ],
    "ts-node": {
        "compilerOptions": {
            "module": "commonjs"
        }
    },
}
